package com.anti.laptop_student;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;

public class App

{

	static Student_One stud;
	static Laptop lap;
	static Laptop lap1;
	static Laptop lap2;
	static Laptop lap3;
	
	
	public static void main(String[] args) {

		//general();
       //DataGeneral.general();
		
		stud = new Student_One();
		
		lap = new Laptop();
		lap1 = new Laptop();
		lap2 = new Laptop();
		lap3 = new Laptop();
		
		lap.setAid(103);
		lap.setLaname("Toshiba");

		lap1.setAid(104);
		lap1.setLaname("Dell");

		lap2.setAid(106);
		lap2.setLaname("IBM");

		lap3.setAid(107);
		lap3.setLaname("Asus");
		
		stud.setRollno(14);
		stud.setName("Munyi");
		stud.setMarks(50);
		stud.getLaptops().add(lap);
		stud.getLaptops().add(lap1);
		stud.getLaptops().add(lap2);
		
		
		Configuration con = new Configuration().configure().addAnnotatedClass(Student_One.class);
		con.addAnnotatedClass(Laptop.class);

		SessionFactory sef = con.buildSessionFactory();

		Session se = sef.openSession();
		Transaction tx = se.beginTransaction();
		
		se.save(lap);
		se.save(lap1);
		se.save(lap2);
		se.save(lap3);
		
		
		se.save(stud);
		
		
		
		tx.commit();
		

		
		
	}
}
